hardstatus alwayslastline
hardstatus string '%{7;4} %-Lw%{+7;4b}%50>%n%f %t%{-}%+Lw%< %-= [%H]%{-}'
#hardstatus string '%{2;4}%n%=%{7;4}%-w%{=b1;4}%n %{=b7;4}%t%{7;4}%+w%=%{2;4}%n'

# use the mouse scroll wheel, but doesn't work if we use 'hardstatus'
#termcapinfo xterm*|xterms|xs|rxvt ti@:te@

escape ^Yy          # escape command is Ctrl-Y
startup_message off # disable startup message
defscrollback 32000 # large scrollback buffer
defutf8 on          # UTF-8 enabled
